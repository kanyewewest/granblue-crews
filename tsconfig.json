{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "pretty": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2018", "dom"]
  }
}
